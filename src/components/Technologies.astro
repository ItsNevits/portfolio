---
import AstroJsIcon from "@/assets/icons/astro-js.svg";
import NetFrameworkIcon from "@/assets/icons/net-framework.svg";
import TailwindCssIcon from "@/assets/icons/tailwind-css.svg";
import SqlServerIcon from "@/assets/icons/sql-server.svg";
import ReactJsIcon from "@/assets/icons/react-js.svg";
import BootstrapIcon from "@/assets/icons/bootstrap.svg";
import PowerAppsIcon from "@/assets/icons/power-apps.svg";
import PowerAutomateIcon from "@/assets/icons/power-automate.svg";
import PowerPagesIcon from "@/assets/icons/power-pages.svg";
import DataverseIcon from "@/assets/icons/dataverse.svg";
import Css3Icon from "@/assets/icons/css3.svg";
import JavaScriptIcon from "@/assets/icons/javascript.svg";
import TypeScriptIcon from "@/assets/icons/typescript.svg";

import { Image } from "astro:assets";

const technologies = [
  { src: AstroJsIcon, alt: "Astro JS", title: "Astro JS" },
  { src: ReactJsIcon, alt: "React JS", title: "React JS" },
  { src: NetFrameworkIcon, alt: ".NET Framework", title: ".NET Framework" },
  { src: TailwindCssIcon, alt: "Tailwind CSS", title: "Tailwind CSS" },
  { src: BootstrapIcon, alt: "Bootstrap", title: "Bootstrap" },
  { src: Css3Icon, alt: "CSS3", title: "CSS3" },
  { src: JavaScriptIcon, alt: "JavaScript", title: "JavaScript" },
  { src: TypeScriptIcon, alt: "TypeScript", title: "TypeScript" },
  { src: SqlServerIcon, alt: "SQL Server", title: "SQL Server" },
  { src: PowerAppsIcon, alt: "Power Apps", title: "Power Apps" },
  { src: PowerAutomateIcon, alt: "Power Automate", title: "Power Automate" },
  { src: PowerPagesIcon, alt: "Power Pages", title: "Power Pages" },
  { src: DataverseIcon, alt: "Dataverse", title: "Dataverse" },
];
---

<section
  class="relative pt-12 md:pt-16 lg:pt-20 pb-16 md:pb-20 lg:pb-24 bg-accent-dark"
>
  <!-- Content Container -->
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="flex flex-col space-y-8 md:space-y-10">
      <div class="flex flex-col space-y-2">
        <h2 class="text-white text-2xl md:text-3xl font-bold">Technologies</h2>
        <p class="text-white/70 text-base md:text-lg">
          Tools and frameworks I've worked with to build modern solutions
        </p>
      </div>

      <div
        class="w-full inline-flex flex-nowrap overflow-hidden mask-[linear-gradient(to_right,transparent_0,black_128px,black_calc(100%-200px),transparent_100%)]"
      >
        <ul
          class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
        >
          {
            technologies.map((tech) => (
              <li class="shrink-0 transition-transform duration-300 flex flex-col items-center justify-center gap-2 group">
                <div class="w-12 h-12 flex items-center justify-center">
                  <Image
                    src={tech.src}
                    alt={tech.alt}
                    class="object-contain w-full h-full"
                    format="webp"
                    height={48}
                    width={48}
                  />
                </div>
                <span class="text-white text-xs font-medium whitespace-nowrap">
                  {tech.title}
                </span>
              </li>
            ))
          }
        </ul>
        <ul
          class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
          aria-hidden="true"
        >
          {
            technologies.map((tech) => (
              <li class="shrink-0 transition-transform duration-300 flex flex-col items-center justify-center gap-2 group">
                <div class="w-12 h-12 flex items-center justify-center">
                  <Image
                    src={tech.src}
                    alt={tech.alt}
                    class="object-contain w-full h-full"
                    format="webp"
                    height={48}
                    width={48}
                  />
                </div>
                <span class="text-white text-xs font-medium whitespace-nowrap">
                  {tech.title}
                </span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
