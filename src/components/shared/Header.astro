---
import ArrowRightIcon from "@/assets/icons/arrow-right.svg";
import { Image } from "astro:assets";
---

<header
  class="p-4 h-20 backdrop-blur-md bg-white/10 border-b border-white/5 fixed w-full top-0 z-50 shadow-lg shadow-black/20"
  id="header"
>
  <nav class="flex justify-between items-center max-w-7xl mx-auto">
    <a
      href="/"
      class="text-white font-bold text-xl tracking-tight group relative"
    >
      <h1 class="relative z-10 text-2xl md:text-3xl">Nevits</h1>
    </a>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-button"
      class="md:hidden text-white p-2 focus:outline-none"
      aria-label="Toggle menu"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          id="menu-icon"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
        <path
          id="close-icon"
          class="hidden"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Desktop menu -->
    <ul class="hidden md:flex items-center justify-center space-x-10">
      <li>
        <a href="/" class="nav-link text-white relative group">
          <span class="relative z-10">Home</span>
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-white group-hover:w-full transition-all duration-300 ease-out"
          ></span>
        </a>
      </li>
      <li>
        <a href="/about" class="nav-link text-white relative group">
          <span class="relative z-10">About</span>
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-white group-hover:w-full transition-all duration-300 ease-out"
          ></span>
        </a>
      </li>
      <li>
        <a href="/projects" class="nav-link text-white relative group">
          <span class="relative z-10">Projects</span>
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-white group-hover:w-full transition-all duration-300 ease-out"
          ></span>
        </a>
      </li>
      <li>
        <a
          href="/contact"
          class="bg-white rounded-full pl-3 pr-2 py-2 flex items-center justify-center group transition-all duration-300 ease-out"
        >
          <span>Get in touch</span>
          <Image
            src={ArrowRightIcon}
            alt="Arrow Right"
            class="inline-block ml-2 bg-secondary rounded-full p-1 group-hover:translate-x-1 transition-transform duration-300 ease-out"
            format="webp"
            height={30}
            width={30}
          />
        </a>
      </li>
    </ul>
  </nav>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden absolute top-20 left-0 right-0 bg-secondary/80 backdrop-blur-md border-b border-white/10"
  >
    <ul class="flex flex-col items-center space-y-6 py-8">
      <li>
        <a
          href="/"
          class="text-white text-lg hover:text-secondary transition-colors"
          >Home</a
        >
      </li>
      <li>
        <a
          href="/about"
          class="text-white text-lg hover:text-secondary transition-colors"
          >About</a
        >
      </li>
      <li>
        <a
          href="/projects"
          class="text-white text-lg hover:text-secondary transition-colors"
          >Projects</a
        >
      </li>
      <li>
        <a
          href="/contact"
          class="bg-white rounded-full px-6 py-3 flex items-center justify-center group transition-all duration-300 ease-out"
        >
          <span>Get in touch</span>
          <Image
            src={ArrowRightIcon}
            alt="Arrow Right"
            class="inline-block ml-2 bg-secondary rounded-full p-1"
            format="webp"
            height={30}
            width={30}
          />
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");
  const header = document.getElementById("header");

  mobileMenuButton?.addEventListener("click", () => {
    const isOpen = mobileMenu?.classList.toggle("hidden");
    menuIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");

    // Toggle header background color and blur
    if (!isOpen) {
      header?.classList.add("bg-secondary/80", "backdrop-blur-md");
    } else {
      header?.classList.remove("bg-secondary/80", "backdrop-blur-md");
    }
  });

  // Close mobile menu when clicking on a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll("a");
  mobileMenuLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
      header?.classList.remove("bg-secondary/80", "backdrop-blur-md");
    });
  });
</script>
