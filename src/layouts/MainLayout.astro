---
import Header from "@/components/shared/Header.astro";
import Footer from "@/components/shared/Footer.astro";
import ScrollProgressBar from "@/components/shared/ScrollProgressBar.astro";
import "@/styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>nevits.dev - Full Stack Developer</title>
    <meta name="title" content="nevits.dev - Full Stack Developer" />
    <meta
      name="description"
      content="Full-stack developer specializing in modern web technologies and scalable applications. Expert in React, .NET, Astro, and Microsoft Power Platform."
    />
    <meta
      name="keywords"
      content="full stack developer, web developer, react developer, .NET Developer, Portfolio"
    />
    <meta name="author" content="nevits.dev" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nevits.dev/" />
    <meta property="og:title" content="nevits.dev - Full Stack Developer" />
    <meta
      property="og:description"
      content="Full-stack developer crafting digital experiences that solve real problems. Specialized in modern web technologies."
    />
    <meta property="og:image" content="/og-image.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://nevits.dev/" />
    <meta
      property="twitter:title"
      content="nevits.dev - Full Stack Developer"
    />
    <meta
      property="twitter:description"
      content="Full-stack developer crafting digital experiences that solve real problems."
    />
    <meta property="twitter:image" content="/og-image.jpg" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://nevits.dev/" />
  </head>
  <body>
    <ScrollProgressBar />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
